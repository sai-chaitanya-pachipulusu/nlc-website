{
  "version": 2,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" }
  ],
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 15,
      "includeFiles": [
        "server/pdf-templates/**",
        "server/example-pdfs/**",
        "assets/images/**",
        "server/data/**"
      ]
    }
  }
}